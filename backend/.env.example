# Example environment variables for the backend
# Copy to .env and adjust values per environment (development/staging/production)

ENV=development
APP_NAME=Foodz Multi-Brand API
API_V1_PREFIX=/api/v1

# Postgres (production should use a managed provider URL)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/dbname

# JWT
JWT_SECRET_KEY=dev-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# OpenAI
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com

# Logging & CORS
LOG_LEVEL=INFO
# Comma-separated list or JSON array
ALLOWED_ORIGINS=["http://localhost:3000"]

# AI provider
AI_PROVIDER=openai
AI_MODEL=gpt-4o-mini

# Admin user (dev only)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Optional: set to true to clear menu during seed
CLEAR_MENU=false
# Database (Postgres / Neon) - example
DATABASE_URL=postgresql+asyncpg://<user>:<pw>@<host>/<db>?sslmode=require

# Razorpay
RAZORPAY_KEY_ID=rzp_test_xxx
RAZORPAY_KEY_SECRET=rzp_secret_xxx

# AI provider (openai or gemini)
AI_PROVIDER=openai
OPENAI_API_KEY=sk-...

# App
APP_HOST=0.0.0.0
APP_PORT=8000
ENV=development